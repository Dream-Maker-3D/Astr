# OpenRouter API Configuration
# Get your API key from: https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-v1-your-api-key-here

# Optional: OpenRouter App Name (for usage tracking)
OPENROUTER_APP_NAME=Astir Voice Assistant

# Optional: OpenRouter HTTP Referer
OPENROUTER_HTTP_REFERER=https://github.com/Dream-Maker-3D/Astr

# Development Settings
DEBUG=false
LOG_LEVEL=INFO

# Audio Settings (optional overrides)
# AUDIO_INPUT_DEVICE=default
# AUDIO_OUTPUT_DEVICE=default

# Model Settings (optional overrides)
# WHISPER_MODEL=base
# TTS_MODEL=tts_models/multilingual/multi-dataset/xtts_v2

# Plugin Settings (future use)
# PLUGINS_ENABLED=false
# MEMORY_ENABLED=false
# MCP_ENABLED=false
